<div class="d-block d-md-none">
    <% if @results.any? %>
        <% @results.each do |hike| %>
            <div class="card mb-3 shadow-sm">
                <div class="card-body p-3">
                    <h5 class="fw-bold mb-1"><%= hike.trail_name %></h5>
                    <div class="d-flex align-items-center text-muted mb-3">
                        <i class="icon icon-map-marker-alt me-2"></i>
                        <%= hike.starting_point || "<i class='icon icon-ban text-danger small'></i>".html_safe %>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <i class="icon icon-route me-1"></i>
                            <%= hike.distance_km ? "#{hike.distance_km} km" : "<i class='icon icon-ban text-danger small'></i>".html_safe %>
                            <i class="icon icon-arrow-up ms-3 me-1"></i>
                            <%= hike.elevation_gain ? "#{hike.elevation_gain} m" : "<i class='icon icon-ban text-danger small'></i>".html_safe %>
                        </div>
                        <% difficulty_color = case hike.difficulty
                                              when 1 then "success"
                                              when 2 then "info"
                                              when 3 then "warning"
                                              when 4 then "warning"
                                              when 5 then "danger"
                                              end %>
                        <span class="badge bg-<%= difficulty_color %> p-2">
                           <%= "#{hike.difficulty}/5" %>
                       </span>
                    </div>

                    <div class="text-muted mb-3 small">
                        <i class="far fa-calendar me-1"></i>
                        <%= hike.last_hiking_date&.strftime("%d/%m/%Y") || "<i class='icon icon-ban text-danger'></i>".html_safe %>
                        •
                        <%= hike.last_guide_name.presence || "<i class='icon icon-ban text-danger'></i>".html_safe %>
                    </div>

                    <div class="d-flex w-100">
                        <% button_classes = "btn btn-outline-dark w-100" %>

                        <div class="flex-grow-1">
                            <%= render partial: "roadmap", locals: { hike: hike } %>
                        </div>

                        <% if can?(:read, HikeHistory) %>
                            <div class="flex-grow-1">
                                <%= link_to hike_histories_path(hike_id: hike.id),
                                            title: "Voir l'historique",
                                            class: button_classes do %>
                                    <i class="icon icon-history"></i>
                                <% end %>
                            </div>
                        <% end %>

                        <div class="flex-grow-1">
                            <% if can?(:update, Hike) %>
                                <%= link_to edit_hike_path(hike),
                                            title: "Editer",
                                            class: button_classes do %>
                                    <i class="icon icon-pen"></i>
                                <% end %>
                            <% end %>
                        </div>

                        <div class="flex-grow-1">
                            <% if can?(:destroy, Hike) %>
                                <%= form_with url: hike_path(hike), method: :delete, class: "h-100" do |f| %>
                                    <%= f.button type: :submit,
                                                 class: button_classes,
                                                 title: "Supprimer",
                                                 onclick: "return confirmDelete(event, 'ce parcours')" do %>
                                        <i class="icon icon-trash"></i>
                                    <% end %>
                                <% end %>
                            <% end %>
                        </div>

                        <!-- Mise à jour -->
                        <div class="flex-grow-1">
                            <% if hike.updating? %>
                                <button class="<%= button_classes %>" disabled>
                                    <i class="icon icon-sync-alt spin"></i>
                                </button>
                            <% elsif !hike.openrunner_ref_valid? %>
                                <button class="<%= button_classes %>" disabled title="Pas de référence OpenRunner">
                                    <i class="icon icon-ban text-danger"></i>
                                </button>
                            <% else %>
                                <% if can?(:update, Hike) %>
                                    <%= form_with url: refresh_from_openrunner_hike_path(hike), method: :post, class: "h-100" do |f| %>
                                        <%= f.hidden_field :redirect_path, value: hikes_path %>
                                        <%= f.hidden_field :search, value: params[:search] %>
                                        <%= f.button type: :submit,
                                                     class: button_classes,
                                                     title: "Dernière mise à jour: #{hike.last_update_attempt&.strftime('%d/%m/%Y %H:%M') || 'Jamais'}",
                                                     data: { turbo: false } do %>
                                            <i class="icon icon-sync-alt"></i>
                                        <% end %>
                                    <% end %>
                                <% end %>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    <% elsif params[:trail_name].present? || params[:starting_point].present? %>
        <div class="alert alert-info" role="alert">
            Aucun résultat trouvé pour votre recherche
        </div>
    <% end %>
</div>