<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-10 text-center text-3xl font-bold bg-gradient-to-r from-blue-400 to-blue-600 bg-clip-text text-transparent">
      <%= t('.title') %>
    </h2>
    <p class="mt-2 text-center text-sm text-slate-400">
      <%= t('.subtitle') %>
    </p>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-slate-800 rounded-2xl shadow-2xl p-8 border border-slate-700">
      <% if @user.errors.any? %>
        <div class="mb-6 rounded-lg bg-red-500/10 border border-red-500/20 p-4">
          <h3 class="text-sm font-medium text-red-400 mb-2">
            <%= pluralize(@user.errors.count, "erreur") %> ont empêché la création de ce compte :
          </h3>
          <ul class="list-disc list-inside space-y-1 text-sm text-red-300">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @user, url: user_path, class: "space-y-6" do |form| %>
        <div>
          <%= form.label :name, t('.name_label'), class: "block text-sm font-medium text-slate-300 mb-2" %>
          <%= form.text_field :name,
              required: true,
              autofocus: true,
              placeholder: "John Doe",
              class: "block w-full rounded-lg border-0 bg-slate-700 px-4 py-3 text-white placeholder:text-slate-400 border border-slate-600 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all sm:text-sm sm:leading-6" %>
        </div>

        <div>
          <%= form.label :email_address, t('.email_label'), class: "block text-sm font-medium text-slate-300 mb-2" %>
          <%= form.email_field :email_address,
              required: true,
              autocomplete: "username",
              placeholder: "you@example.com",
              class: "block w-full rounded-lg border-0 bg-slate-700 px-4 py-3 text-white placeholder:text-slate-400 border border-slate-600 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all sm:text-sm sm:leading-6" %>
        </div>

        <div>
          <%= form.label :password, t('.password_label'), class: "block text-sm font-medium text-slate-300 mb-2" %>
          <%= form.password_field :password,
              required: true,
              autocomplete: "new-password",
              placeholder: "Enter password (min. 8 characters)",
              maxlength: 72,
              class: "block w-full rounded-lg border-0 bg-slate-700 px-4 py-3 text-white placeholder:text-slate-400 border border-slate-600 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all sm:text-sm sm:leading-6" %>
        </div>

        <div>
          <%= label_tag :invitation_code, t('.invitation_code_label'), class: "block text-sm font-medium text-slate-300 mb-2" %>
          <%= password_field_tag :invitation_code, nil,
              required: true,
              placeholder: t('.invitation_code_placeholder'),
              class: "block w-full rounded-lg border-0 bg-slate-700 px-4 py-3 text-white placeholder:text-slate-400 border border-slate-600 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all sm:text-sm sm:leading-6" %>
        </div>

        <div>
          <%= form.submit t('.create_button'), class: "w-full rounded-lg bg-gradient-to-r from-blue-600 to-blue-500 px-4 py-3 text-sm font-semibold text-white shadow-lg hover:from-blue-500 hover:to-blue-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-slate-800 transition-all hover:scale-[1.02] cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-6 text-center">
        <p class="text-sm text-slate-400">
          <%= t('.already_have_account') %>
          <%= link_to t('.sign_in'), new_session_path, class: "font-medium text-blue-400 hover:text-blue-300 transition-colors" %>
        </p>
      </div>
    </div>
  </div>
</div>
