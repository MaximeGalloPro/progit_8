<div class="max-w-3xl mx-auto">
  <div class="bg-white shadow sm:rounded-lg">
    <!-- Header with avatar -->
    <div class="px-4 py-5 sm:p-6">
      <div class="sm:flex sm:items-center sm:justify-between">
        <div class="sm:flex sm:space-x-5">
          <div class="flex-shrink-0">
            <% if @user.avatar_url.present? %>
              <%= image_tag @user.avatar_url, alt: @user.name, class: "mx-auto h-20 w-20 rounded-full" %>
            <% else %>
              <div class="mx-auto h-20 w-20 rounded-full bg-gray-300 flex items-center justify-center">
                <span class="text-2xl font-semibold text-gray-600"><%= @user.name&.first&.upcase || "?" %></span>
              </div>
            <% end %>
          </div>
          <div class="mt-4 text-center sm:mt-0 sm:pt-1 sm:text-left">
            <p class="text-sm font-medium text-gray-600">Welcome back,</p>
            <p class="text-xl font-bold text-gray-900 sm:text-2xl"><%= @user.name %></p>
            <p class="text-sm font-medium text-gray-600"><%= @user.email_address %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Edit form -->
    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <%= form_with model: @user, url: user_path, method: :patch do |form| %>
        <% if @user.errors.any? %>
          <div class="rounded-md bg-red-50 p-4 mb-4">
            <div class="flex">
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul role="list" class="list-disc space-y-1 pl-5">
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="space-y-6">
          <div>
            <%= form.label :nickname, "Nickname", class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2 flex gap-3">
              <%= form.text_field :nickname,
                  placeholder: "Enter your nickname",
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 px-3" %>
              <%= form.submit "Save", class: "rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 cursor-pointer" %>
            </div>
          </div>

          <% if @user.oauth_user? %>
            <div class="border-t pt-6">
              <% if @user.password_digest.present? %>
                <h4 class="text-sm font-medium leading-6 text-gray-900 mb-4">Change Password</h4>
                <p class="text-xs text-gray-600 mb-4">Update your password for email/password login.</p>
              <% else %>
                <h4 class="text-sm font-medium leading-6 text-gray-900 mb-4">⚠️ Set Password (Required to unlink Google)</h4>
                <p class="text-xs text-red-600 font-medium mb-4">You need to set a password before you can unlink your Google account.</p>
              <% end %>
              <%= form.label :password, "Password", class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-2 flex gap-3">
                <%= form.password_field :password,
                    placeholder: "Enter password (min. 8 characters)",
                    class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 px-3" %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Account info (read-only) -->
    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <h3 class="text-base font-semibold leading-6 text-gray-900 mb-4">Account Information</h3>
      <dl class="divide-y divide-gray-200">
        <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5">
          <dt class="text-sm font-medium text-gray-500">Full name</dt>
          <dd class="mt-1 flex text-sm text-gray-900 sm:col-span-2 sm:mt-0">
            <span class="flex-grow"><%= @user.name %></span>
            <span class="ml-4 flex-shrink-0 text-gray-400 text-xs">From Google</span>
          </dd>
        </div>
        <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5">
          <dt class="text-sm font-medium text-gray-500">Email address</dt>
          <dd class="mt-1 flex text-sm text-gray-900 sm:col-span-2 sm:mt-0">
            <span class="flex-grow"><%= @user.email_address %></span>
            <span class="ml-4 flex-shrink-0 text-gray-400 text-xs">From Google</span>
          </dd>
        </div>
        <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5">
          <dt class="text-sm font-medium text-gray-500">Account type</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
            <div class="flex items-center justify-between">
              <div>
                <% if @user.oauth_user? %>
                  <span class="inline-flex items-center gap-1.5 rounded-md bg-blue-50 px-2 py-1 text-xs font-medium text-blue-700 ring-1 ring-inset ring-blue-700/10">
                    <span class="h-1.5 w-1.5 rounded-full bg-blue-700"></span>
                    Google Account
                  </span>
                <% else %>
                  <span class="inline-flex items-center rounded-md bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10">Email/Password</span>
                <% end %>
              </div>
              <div class="text-right">
                <% if @user.oauth_user? %>
                  <% if @user.password_digest.present? %>
                    <%= button_to unlink_google_user_path, method: :delete,
                        data: { turbo_confirm: "Are you sure you want to unlink your Google account?" },
                        class: "text-xs text-red-600 hover:text-red-800 font-medium bg-transparent border-0 p-0 cursor-pointer" do %>
                      Unlink Google
                    <% end %>
                  <% else %>
                    <span class="text-xs text-gray-400 font-medium cursor-not-allowed">Unlink Google</span>
                    <p class="text-xs text-red-600 mt-1">Set a password first to unlink</p>
                  <% end %>
                <% else %>
                  <%= button_to "Link Google Account", link_google_user_path, method: :post,
                      class: "text-xs text-blue-600 hover:text-blue-800 font-medium bg-transparent border-0 p-0 cursor-pointer" %>
                <% end %>
              </div>
            </div>
          </dd>
        </div>
        <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5">
          <dt class="text-sm font-medium text-gray-500">Role</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
            <% case @user.role %>
            <% when "admin" %>
              <span class="inline-flex items-center gap-1.5 rounded-md bg-purple-50 px-2 py-1 text-xs font-medium text-purple-700 ring-1 ring-inset ring-purple-700/10">
                <span class="h-1.5 w-1.5 rounded-full bg-purple-700"></span>
                Administrator
              </span>
            <% when "moderator" %>
              <span class="inline-flex items-center gap-1.5 rounded-md bg-yellow-50 px-2 py-1 text-xs font-medium text-yellow-700 ring-1 ring-inset ring-yellow-700/10">
                <span class="h-1.5 w-1.5 rounded-full bg-yellow-700"></span>
                Moderator
              </span>
            <% else %>
              <span class="inline-flex items-center gap-1.5 rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-700/10">
                <span class="h-1.5 w-1.5 rounded-full bg-green-700"></span>
                User
              </span>
            <% end %>
          </dd>
        </div>
      </dl>
    </div>

    <!-- Actions -->
    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <div class="flex flex-col sm:flex-row gap-3">
        <%= button_to session_path, method: :delete, class: "inline-flex justify-center items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50", data: { turbo_method: :delete } do %>
          <svg class="-ml-0.5 mr-1.5 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M3 4.25A2.25 2.25 0 015.25 2h5.5A2.25 2.25 0 0113 4.25v2a.75.75 0 01-1.5 0v-2a.75.75 0 00-.75-.75h-5.5a.75.75 0 00-.75.75v11.5c0 .414.336.75.75.75h5.5a.75.75 0 00.75-.75v-2a.75.75 0 011.5 0v2A2.25 2.25 0 0110.75 18h-5.5A2.25 2.25 0 013 15.75V4.25z" clip-rule="evenodd" />
            <path fill-rule="evenodd" d="M19 10a.75.75 0 00-.75-.75H8.704l1.048-.943a.75.75 0 10-1.004-1.114l-2.5 2.25a.75.75 0 000 1.114l2.5 2.25a.75.75 0 101.004-1.114l-1.048-.943h9.546A.75.75 0 0019 10z" clip-rule="evenodd" />
          </svg>
          Sign Out
        <% end %>

        <%= button_to user_path, method: :delete, data: { turbo_confirm: "Are you sure you want to delete your account? This action cannot be undone." }, class: "inline-flex justify-center items-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500" do %>
          <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.75 1A2.75 2.75 0 006 3.75v.443c-.795.077-1.584.176-2.365.298a.75.75 0 10.23 1.482l.149-.022.841 10.518A2.75 2.75 0 007.596 19h4.807a2.75 2.75 0 002.742-2.53l.841-10.52.149.023a.75.75 0 00.23-1.482A41.03 41.03 0 0014 4.193V3.75A2.75 2.75 0 0011.25 1h-2.5zM10 4c.84 0 1.673.025 2.5.075V3.75c0-.69-.56-1.25-1.25-1.25h-2.5c-.69 0-1.25.56-1.25 1.25v.325C8.327 4.025 9.16 4 10 4zM8.58 7.72a.75.75 0 00-1.5.06l.3 7.5a.75.75 0 101.5-.06l-.3-7.5zm4.34.06a.75.75 0 10-1.5-.06l-.3 7.5a.75.75 0 101.5.06l.3-7.5z" clip-rule="evenodd" />
          </svg>
          Delete Account
        <% end %>
      </div>
    </div>
  </div>
</div>
