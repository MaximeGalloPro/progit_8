<div data-controller="flash"
     data-action="animationend->flash#remove"
     class="fixed top-20 right-4 z-50 max-w-sm w-full <%= type == :notice ? 'bg-green-50' : 'bg-red-50' %> shadow-lg rounded-lg pointer-events-auto ring-1 ring-black ring-opacity-5 overflow-hidden animate-slide-in">
  <div class="p-4">
    <div class="flex items-start">
      <div class="flex-shrink-0">
        <% if type == :notice %>
          <svg class="h-6 w-6 text-green-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        <% else %>
          <svg class="h-6 w-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
          </svg>
        <% end %>
      </div>
      <div class="ml-3 w-0 flex-1 pt-0.5">
        <p class="text-sm font-medium <%= type == :notice ? 'text-green-900' : 'text-red-900' %>">
          <%= message %>
        </p>
      </div>
      <div class="ml-4 flex flex-shrink-0">
        <button type="button"
                data-action="click->flash#close"
                class="inline-flex rounded-md <%= type == :notice ? 'text-green-400 hover:text-green-500' : 'text-red-400 hover:text-red-500' %> focus:outline-none focus:ring-2 focus:ring-offset-2 <%= type == :notice ? 'focus:ring-green-500' : 'focus:ring-red-500' %>">
          <span class="sr-only">Close</span>
          <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>
