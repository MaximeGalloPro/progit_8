<%= form_with url: update_role_admin_user_path(user), method: :patch do |form| %>
    <%= form.select :role,
        User.roles.keys.map { |role| [role.humanize, role] },
        { selected: user.role },
        {
            class: "rounded-lg bg-slate-700 px-3 py-1.5 text-sm text-white border border-slate-600 focus:ring-2 focus:ring-blue-500 transition-all cursor-pointer",
            onchange: "this.form.submit()"
        } %>
<% end %>
