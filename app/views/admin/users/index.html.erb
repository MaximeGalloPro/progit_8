<div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
        <div>
            <h1 class="text-2xl sm:text-3xl font-bold text-white">Gestion des utilisateurs</h1>
            <p class="mt-2 text-sm text-slate-400">Liste de tous les utilisateurs avec leur nom, email et rôle.</p>
        </div>
    </div>

    <!-- Tableau des utilisateurs -->
    <div class="bg-slate-800 rounded-2xl shadow-2xl border border-slate-700 overflow-hidden">
        <!-- Version desktop -->
        <div class="hidden sm:block overflow-x-auto">
            <table class="w-full">
                <thead class="bg-slate-700/50">
                    <tr>
                        <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Utilisateur</th>
                        <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Email</th>
                        <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Type</th>
                        <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Rôle</th>
                        <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Créé le</th>
                        <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-700">
                    <% @users.each do |user| %>
                        <tr class="hover:bg-slate-700/30 transition-colors">
                            <td class="px-4 py-3 text-sm whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="h-10 w-10 flex-shrink-0">
                                        <% if user.avatar_url.present? %>
                                            <%= image_tag user.avatar_url_with_size(80),
                                                alt: user.name,
                                                loading: "lazy",
                                                onerror: "this.style.display='none'; this.nextElementSibling.style.display='flex';",
                                                class: "h-10 w-10 rounded-full ring-2 ring-blue-500/20" %>
                                            <div class="h-10 w-10 rounded-full bg-gradient-to-br from-blue-500 to-blue-600 hidden items-center justify-center ring-2 ring-blue-500/20">
                                                <span class="text-sm font-semibold text-white"><%= user.name&.first&.upcase || "?" %></span>
                                            </div>
                                        <% else %>
                                            <div class="h-10 w-10 rounded-full bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center ring-2 ring-blue-500/20">
                                                <span class="text-sm font-semibold text-white"><%= user.name&.first&.upcase || "?" %></span>
                                            </div>
                                        <% end %>
                                    </div>
                                    <div class="ml-4">
                                        <div class="font-medium text-white"><%= user.name %></div>
                                        <div class="text-slate-400 text-xs"><%= user.nickname.presence || "Pas de surnom" %></div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-4 py-3 text-sm text-slate-300">
                                <%= user.email_address %>
                            </td>
                            <td class="px-4 py-3 text-sm">
                                <% if user.oauth_user? %>
                                    <span class="inline-flex items-center gap-1.5 rounded-lg bg-blue-500/10 px-2.5 py-1 text-xs font-medium text-blue-400 ring-1 ring-inset ring-blue-500/20">
                                        <span class="h-1.5 w-1.5 rounded-full bg-blue-400"></span>
                                        Google
                                    </span>
                                <% else %>
                                    <span class="inline-flex items-center rounded-lg bg-slate-700 px-2.5 py-1 text-xs font-medium text-slate-300 ring-1 ring-inset ring-slate-600">
                                        Email
                                    </span>
                                <% end %>
                            </td>
                            <td class="px-4 py-3 text-sm">
                                <%= render "admin/users/status", user: user %>
                            </td>
                            <td class="px-4 py-3 text-sm text-slate-300 whitespace-nowrap">
                                <%= user.created_at.strftime("%d/%m/%Y") %>
                            </td>
                            <td class="px-4 py-3 text-sm whitespace-nowrap">
                                <%= link_to edit_admin_user_path(user),
                                            class: "p-2 rounded-lg bg-slate-700 text-slate-300 border border-slate-600 hover:bg-slate-600 transition-all",
                                            title: "Editer" do %>
                                    <i class="icon icon-pen text-xs"></i>
                                <% end %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>

        <!-- Version mobile -->
        <div class="sm:hidden divide-y divide-slate-700">
            <% @users.each do |user| %>
                <div class="p-4 hover:bg-slate-700/30 transition-colors">
                    <div class="flex items-center justify-between mb-3">
                        <div class="flex items-center">
                            <div class="h-10 w-10 flex-shrink-0">
                                <% if user.avatar_url.present? %>
                                    <%= image_tag user.avatar_url_with_size(80),
                                        alt: user.name,
                                        loading: "lazy",
                                        onerror: "this.style.display='none'; this.nextElementSibling.style.display='flex';",
                                        class: "h-10 w-10 rounded-full ring-2 ring-blue-500/20" %>
                                    <div class="h-10 w-10 rounded-full bg-gradient-to-br from-blue-500 to-blue-600 hidden items-center justify-center ring-2 ring-blue-500/20">
                                        <span class="text-sm font-semibold text-white"><%= user.name&.first&.upcase || "?" %></span>
                                    </div>
                                <% else %>
                                    <div class="h-10 w-10 rounded-full bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center ring-2 ring-blue-500/20">
                                        <span class="text-sm font-semibold text-white"><%= user.name&.first&.upcase || "?" %></span>
                                    </div>
                                <% end %>
                            </div>
                            <div class="ml-3">
                                <div class="font-medium text-white text-sm"><%= user.name %></div>
                                <div class="text-slate-400 text-xs"><%= user.nickname.presence || "Pas de surnom" %></div>
                            </div>
                        </div>
                        <%= link_to edit_admin_user_path(user),
                                    class: "p-2 rounded-lg bg-slate-700 text-slate-300 border border-slate-600 hover:bg-slate-600 transition-all",
                                    title: "Editer" do %>
                            <i class="icon icon-pen text-xs"></i>
                        <% end %>
                    </div>
                    <div class="space-y-2 text-sm">
                        <div><span class="text-slate-400">Email :</span> <span class="text-slate-300"><%= user.email_address %></span></div>
                        <div class="flex items-center gap-2">
                            <span class="text-slate-400">Type :</span>
                            <% if user.oauth_user? %>
                                <span class="inline-flex items-center gap-1 rounded-lg bg-blue-500/10 px-2 py-0.5 text-xs font-medium text-blue-400 ring-1 ring-inset ring-blue-500/20">
                                    Google
                                </span>
                            <% else %>
                                <span class="inline-flex items-center rounded-lg bg-slate-700 px-2 py-0.5 text-xs font-medium text-slate-300 ring-1 ring-inset ring-slate-600">
                                    Email
                                </span>
                            <% end %>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="text-slate-400">Rôle :</span>
                            <%= render "admin/users/status", user: user %>
                        </div>
                        <div><span class="text-slate-400">Créé le :</span> <span class="text-slate-300"><%= user.created_at.strftime("%d/%m/%Y") %></span></div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>

    <!-- Pagination -->
    <% if @total_pages > 1 %>
        <div class="flex items-center justify-between mt-6">
            <div class="text-sm text-slate-400">
                Page <%= @page %> sur <%= @total_pages %> (<%= @total_users %> utilisateurs)
            </div>
            <div class="flex gap-2">
                <% if @page > 1 %>
                    <%= link_to admin_users_path(page: @page - 1), class: "px-4 py-2 rounded-lg bg-slate-700 text-slate-300 border border-slate-600 hover:bg-slate-600 transition-all text-sm" do %>
                        ← Précédent
                    <% end %>
                <% end %>
                <% if @page < @total_pages %>
                    <%= link_to admin_users_path(page: @page + 1), class: "px-4 py-2 rounded-lg bg-slate-700 text-slate-300 border border-slate-600 hover:bg-slate-600 transition-all text-sm" do %>
                        Suivant →
                    <% end %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>
